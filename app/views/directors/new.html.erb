<!-- Validation failure messages -->
<% if @director.errors.any? %>
  <% @director.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Director</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_director" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for names -->
      <div class="form-group">
        <label for="names" class="control-label">
          Names
        </label>

        <input type="text" id="names" name="names" placeholder="Names" class="form-control" value="<%= @director.names %>">
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="file" id="image" name="image" class="form-control">
      </div>

      <!-- Label and input for movie_id -->
      <div class="form-group">
        <label for="movie_id" class="control-label">
          Movie
        </label>

        <input type="text" id="movie_id" name="movie_id" placeholder="Movie" class="form-control" value="<%= @director.movie_id %>">
      </div>

      <button class="btn btn-success">
        Create Director
      </button>
      or
      <a href="/directors">Cancel</a>
    </form>
  </div>
</div>
